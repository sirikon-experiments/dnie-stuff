https://dnietest.srk.bz {
	root * /opt/dnie-stuff/login-server/root
	file_server
    templates

    respond /subject 200 {
        body {http.request.tls.client.subject}
        close
    }

    tls {
        client_auth {
            mode require_and_verify
            trusted_ca_cert_file /opt/dnie-stuff/login-server/fnmt.pem
            trusted_ca_cert_file /opt/dnie-stuff/login-server/dnie-004.pem
            trusted_ca_cert_file /opt/dnie-stuff/login-server/dnie-005.pem
            trusted_ca_cert_file /opt/dnie-stuff/login-server/dnie-006.pem
        }
    }
}
